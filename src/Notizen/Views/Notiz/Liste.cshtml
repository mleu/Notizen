@using System.Net
@using Notizen.Controllers
@using Notizen.Model
@model IEnumerable<Notizen.Model.NotizModelListe>

@{
    ViewData["Title"] = "Liste";
}

<ol class="button">
    <li class="btn btn-default"><a asp-area="" asp-controller="Notiz" asp-action="Neu">Neue Notiz</a></li>
    <li class="btn btn-default"><a asp-area="" asp-controller="Notiz" asp-action="WechsleStyle">wechsle Style</a></li>
</ol>

<h2>Liste</h2>
<h3>Sortierung</h3>
@{
    @Html.ActionLink("Erledigt Bis", "WechsleSortierung", "Notiz", new { Id = SortierungsTyp.ErledigtBisDatum }, new { @class = ViewBag.Sortierung == SortierungsTyp.ErledigtBisDatum.ToString() ? "btnactive" : "btninactive" });<br/>
    @Html.ActionLink("Wichtigkeit", "WechsleSortierung", "Notiz", new { Id = SortierungsTyp.Wichtigkeit }, new { @class = ViewBag.Sortierung == SortierungsTyp.Wichtigkeit.ToString() ? "btnactive" : "btninactive" });<br />
    @Html.ActionLink("Erstelldatum", "WechsleSortierung", "Notiz", new { Id = SortierungsTyp.Erstelldatum }, new { @class = ViewBag.Sortierung == SortierungsTyp.Erstelldatum.ToString() ? "btnactive" : "btninactive" });<br />

    @Html.ActionLink(ViewBag.FilterAbgeschlossen == true.ToString() ? "abgeschlossene anzeigen" : "abgeschlossene nicht anzeigen", "WechsleFilter");

        }
                   
